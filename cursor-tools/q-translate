#!/bin/bash

# Translate natural language to shell commands using Amazon Q
# Usage: q-translate "find all Python files"

if [ $# -eq 0 ]; then
    echo "Usage: q-translate \"Task description\""
    echo "Example: q-translate \"find all Python files modified today\""
    exit 1
fi

echo "ðŸ”„ Translating: $1"
echo "----------------------------------------"

# Use Amazon Q CLI translate command
q translate "$1"
