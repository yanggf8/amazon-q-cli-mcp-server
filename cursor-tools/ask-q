#!/bin/bash

# Ask Amazon Q CLI tool for cursor-agent
# Usage: ask-q "Your question here"

if [ $# -eq 0 ]; then
    echo "Usage: ask-q \"Your question\""
    echo "Example: ask-q \"What is AWS Lambda?\""
    exit 1
fi

echo "ðŸ¤– Asking Amazon Q: $1"
echo "----------------------------------------"

# Use Amazon Q CLI directly
q chat --no-interactive "$1"
